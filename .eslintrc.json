{
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "ecmaFeatures": {
        "jsx": true,
        "modules": true,
        "classes": true
    },
    "extends": "airbnb",
    "plugins": [
        "react"
    ],
    "rules":{
        "no-console": 0,
        "no-underscore-dangle": ["error", { "allow": ["_id"] }],
        "arrow-body-style": ["error", "as-needed", { "requireReturnForObjectLiteral": true }],
        "no-underscore-dangle": ["error", { "allowAfterThis": true }]
    }
}
